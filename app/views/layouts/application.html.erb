<!DOCTYPE html>
<html>
  <head>
    <title>GifGenerator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <nav>
        <%=link_to "Favorites", favorites_path %>
        <% if admin? %>
          <%=link_to "Gifs", admin_gifs_path %>
          <%=link_to "Categories", admin_categories_path %>
          <%=link_to "Generate Gif", new_admin_category_path %>
        <% else %>
          <%=link_to "Gifs", gifs_path %>
        <% end %>
        <%=link_to "Log Out", logout_path, method: :delete %>
      </nav>
    <% end %>
    <% flash.each do |type, message| %>
      <%= content_tag :div, message, class: "alert alert#{type}" %>
      <% flash.discard(type) %>
    <% end %>
    <%= yield %>
  </body>
</html>
